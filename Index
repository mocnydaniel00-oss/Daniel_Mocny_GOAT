<script>
  // Detect iframe failure
  setTimeout(() => {
    const iframe = document.querySelector("iframe");
    try {
      if (!iframe.contentWindow) {
        document.getElementById("fallback").style.display = "flex";
      }
    } catch (e) {
      document.getElementById("fallback").style.display = "flex";
    }
  }, 3000);
</script>

